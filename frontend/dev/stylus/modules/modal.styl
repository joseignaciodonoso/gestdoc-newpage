
.modal
	cover(fixed)
	z-index $z-index-modal
	display none

	&.modal--in
		display table
		animation fadeIn .5s ease
		.modal__box
			animation scaleFadeIn .5s .2s ease backwards

	&.modal--out
		display table
		animation fadeOut .2s ease both
		.modal__box
			animation scaleFadeOut .2s ease both

	.modal__back
		cover(absolute)
		background-color rgba(0, 43, 255,.6)

	.modal__front
		position relative
		height 100%
		display table-cell
		text-align center
		vertical-align middle
		align-items center
		justify-content center
		@media $break-md
			display flex
			align-items center
			justify-content center

		&.modal__front--openinfo
			.modal__search__info
				display block
				animation fadeIn .5s
				.modal__search__box
					height 450px
					@media $break-md
						height 430px

		
		

	.modal__header
		padding 20px 20px
		box-shadow $shadow
		border-radius 40px
		display flex
		.modal__icon
			margin-right 20px
			img
				width 60px
		.modal__header__content
			text-align left
			.modal__title
				color $color_primary
				font-style italic
				margin-bottom 0
			
			.modal__category
				color $color_primary
				opacity .7
				font-size 12px


	.modal__box
		border-radius 40px
		background white
		max-width 500px
		position relative
		height 350px
		margin 0 auto
		@media $break-md
			margin initial
			width 800px
		
	


	.modal__content

		.modal__search__result
			padding 10px 20px
			display flex
			align-items center
			color $color_primary
			border-radius 20px
			background-color transparent
			transition .5s
			&:hover
				background-color rgba(0,43,255,.1)
			.modal__search__name
				font-size 12px
				line-height 22px
				margin-right 10px
				@media $break-md
					font-size 20px
					line-height 24px
					margin-right 20px
			.modal__search__tag
				font-size 10px
				line-height 18px
				opacity .7
				border 1px dashed $color_primary
				border-radius 15px
				padding 2px 5px
				@media $break-md
					padding 5px 10px
					font-size 18px
					line-height 22px	

	.modal__search__info
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		width 100%
		z-index 2
		padding 0px 5px
		text-align left
		display none
		animation fadeOut .5s
		@media $break-md
			position relative
			top initial
			left initial
			transform initial
			margin 0
			width 39%
			margin 10px

		.modal__search__box
			background-color $cyan
			border-radius 40px
			padding 10px 20px
			box-shadow $shadow
			overflow-y scroll
			transition .5s
			color white
			height 0
			@media $break-md
				padding 20px 40px
			
			&>*
				animation slideFadeUp .5s ease backwards
				animation-stagger(5,.2s)

			&::-webkit-scrollbar
				width 8px     /* Tamaño del scroll en vertical */
				height 8px    /* Tamaño del scroll en horizontal */
				display none  /* Ocultar scroll */
					/* Ponemos un color de fondo y redondeamos las esquinas del thumb */
			&::-webkit-scrollbar-thumb
				background: white
				border-radius: 4px;

			/* Cambiamos el fondo y agregamos una sombra cuando esté en hover */
			&::-webkit-scrollbar-thumb:hover
				background: #b3b3b3;
				box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.2);

			/* Cambiamos el fondo cuando esté en active */
			&::-webkit-scrollbar-thumb:active
				background-color: #999999;
			
			.modal__info__tag	
				display inline-block
				font-size 12px
				line-height 18px
				opacity 4
				border 1px dashed white
				border-radius 15px
				padding 2px 10px
				margin-bottom 10px

			.modal__info__name
				title h3
				font-weight bold
				margin-bottom 20px

			.modal__info__items
				padding 10px
				padding-left 0
				.modal__info__item
					padding 10px 0px
					font-weight bold
					font-style italic
					position relative
					padding-left 10px
					&:after
						content ''
						position absolute
						top 20px
						left 0
						width 5px
						height 5px
						border-radius 50%
						background-color white

			.modal__info__description
				font-size 14px
				line-height 24px		
			.modal__info__link
				text-align center
				padding 10px
				.btn
					font-weight bold
					font-size 18px
					span
						margin-left 10px
				
		.modal__search__footer
			display flex
			padding 20px
			justify-content flex-end		

	.modal__close
		position absolute
		top 0
		right 0
		padding 10px 15px
		opacity .5
		color $gray
		&:hover
			cursor pointer

.modal__bg
	width: 100%
	height 100%
	background-color: black
	opacity 0.7
	position: absolute
	top 0
	z-index 20

