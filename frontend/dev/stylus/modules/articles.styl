article
	position relative
	overflow hidden
	transition box-shadow 0.3s ease 0s
	background-color white
	background: none;
	a:after
		content ""
		cover absolute
		z-index 2

	// Elements

	.article__bg
		cover absolute

	.article__title
		font-weight 500
		margin-bottom 5px

	.article__description
		margin-bottom 10px
		font-size $global-size-sm
		line-height $global-lh-md
		&:last-child
			margin-bottom 0

	.article__content
		p
			font-size $global-size-md
			opacity .7
	


	&.article--toggle
		padding 20px
		padding-top 10px
		display flex
		flex-direction column
		justify-content space-between
		align-items center
		text-align justify
		.article__header
			margin-bottom 10px
			.article__icon
				margin-bottom 10px
				img 
					height 50px

			.article__title
				font-weight bold
				font-size 18px
				color #002bff
				font-style italic
			.article__description
				text-align center
				font-size 12px
				line-height 1.8
				color #1D008E


	&.article--testimony
		padding 15px
		border-radius 35px
		display block
		display flex
		justify-content space-between
		align-items center
		box-shadow 0 2px 6px rgba(29,0,142,0.1)
		margin 0 15px
		margin-bottom 20px
		background-color white
		.article__avatar
			width 150px
			.article__circle
				circle(60px)
				margin-right 10px
				@media $break-md
					circle(80px)
				img
					width 60px
					@media $break-md
						width 80px

		.article__body
			max-width 80%
			.article__stars
				margin 5px 0
				span
					color #ffa824
					margin 0 5px 0 0
					font-size 11px
			.article__description
				font-size 12px
				line-height 16px
				opacity .7
				margin-bottom 2px
			
			.article__name
				font-size 12px
				line-height 18px
				font-weight bold


	&.article--fast
		background-color white
		padding 20px 10px
		border-radius 40px
		box-shadow $shadow
		text-align center
		min-height 120px
		display flex
		flex-direction column
		justify-content center
		align-items center
		overflow initial
		margin-bottom 0px
		@media $break-md
			padding 30px 15px
			min-height 210px
			margin-bottom 20px
		.article__tag
			position absolute
			top -5px
			right -20px
			border-radius 15px
			background-color $cyan
			color white
			font-size 10px
			line-height 12px
			font-weight bold
			padding 5px 5px
			@media $break-md
				right -10px
				top 5px
				font-size 12px
				line-height 14px
				padding 5px 10px
		.article__icon
			margin-bottom 10px
			img 
				width 30px
				@media $break-md
					width 50px
		.article__body
			max-width 70%
			margin 0 auto
			.article__title
				font-size 18px
				line-height 24px
				color $color_primary
				font-style italic	
		&:hover
			box-shadow $shadow_hover

	&.article--doc
		padding 15px
		border-radius 40px
		box-shadow $shadow
		text-align center
		min-height 150px
		display flex
		flex-direction column
		justify-content center
		align-items center
		overflow initial
		margin-bottom 00px
		background-color white
		@media $break-md
			min-height 180px
			margin-bottom 0px

		.article__icon
			margin-bottom 5px
			img 
				width 30px
				@media $break-md
					width 50px
		.article__body
			max-width 70%
			margin 0 auto
			.article__title
				title h4
				color $color_primary
				font-style italic	
		&:hover
			box-shadow $shadow_hover

	&.article--plan
		background-color white
		padding 20px
		border-radius 0px
		box-shadow $shadow 
		text-align center
		overflow initial
		margin-bottom 0px
		box-shadow none
		border 1px solid rgba(0,0,0,.05)
		border-radius 15px
		@media $break-md
			padding 30px 30px
		&:hover //mover
			box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
			transform scale(1.01)
			transition .3s
			z-index 10
		&.article--plan--grow
			border-radius 0 0 15px 15px
		
		.article__header
			text-align left
			margin-bottom 20px
			padding-bottom 20px
			border-bottom 1px solid rgba(0,0,0,.05)
			.article__title
				margin-bottom 0


		.article__icon
			margin-bottom 20px
			img 
				width 40px
				margin initial
		
		.article__tag
			position absolute
			top -26px
			left 0
			width 100%
			background-color $color_primary
			color white
			border-radius 15px 15px 0 0
			padding 5px
			font-weight bold
			font-size 12px
			line-height 16px
					
		.article__body
			margin-bottom 20px
			padding-bottom 20px
			border-bottom 1px solid rgba(0,0,0,.05)
			ul
				text-align left
				li 
					position: relative
					display: block
					font-size: 14px
					line-height: 16px
					margin-bottom: 15px
					padding-left: 20px
					&:last-child
						margin-bottom 0
					&:before
						content " "
						circle(5px)
						background-color: $color_primary
						font-family "FontAwesome"
						position absolute
						top 5px
						left 5px
						color $color_primary 
		.article__price
			position relative
			margin-bottom: 20px
			font-family $font2 
			text-align left
			.article__month
				font-size: 14px
				color #002bff
			.article__price
				font-size 36px
				font-weight: bold
				position relative
				color #002bff
	&.article--user
		margin-top: 40px
		padding: 20px 10px
		border: 1px solid rgb(245, 245, 245)
		box-shadow: 0 7px 30px -10px rgba(150,170,180,0.2);
		border-radius: 5px
		min-height: 250px
		background-color: white
		.article__body
			padding: 20px 45px
			display: flex
			flex-direction: column
			justify-content: space-between
			gap 25px
			min-height: 100px
			.article__title
				font-size: 24px
				color $dark
			.article__description
				min-height: 100px
		&:hover //mover
			box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
			transform scale(1.01)
			transition .3s
			z-index 10
			background-color #f4f6ff
	&.article--feature
		padding: 30px 40px
		margin-bottom: 20px
		width: 50%
		text-align: justify
		background-color: #fefeff
		border-radius 8px
		box-shadow: 0 7px 30px -10px rgba(150,170,180,0.2);
		color: rgb(105, 104, 104)
		.article__title
			font-size: 21px
			font-weight: bold
			margin-bottom: 14px
			color: $dark 
			text-align: left
		.article__description
			font-size: 13px
			line-height: normal;
			margin 0px
			text-align: left
			line-height: 1.5
		.article__image
			display: flex
			justify-content: flex-start
			height 60px
			padding-bottom: 14px
			img
				margin 0