.yt-video
	max-width auto
	margin 0 auto
	position relative
	cursor pointer
	overflow hidden
	background $dark
	margin-bottom 20px
	.yt-video-inner
		padding-bottom 56%
		position relative

	&:hover
		.video-bg
			transform scale(1.1) rotate(3deg)
					
	iframe
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		z-index 0
		animation fadeIn .5s .8s ease backwards


